package Condições;

public class ifElseEverything {
	
	public static void main(String[] args) {
	int n1 = 2;
	int n2 = 4;
	int n3 = 5;
	
	 boolean verifyNumberHigher = (n1 + n2) > n3 ? true : false;
	
	System.out.println(verifyNumberHigher ? "A soma de A + B é Maior que C" : "A Soma é de A + B é menor que C /n" );
	
	
	System.out.println("--------------------------------");
	
	int n1 = 2;
	int n2 = 4;
	int n3 = 5;
	
	 boolean verifyNumberHigher = (n1 + n2) > n3 ? true : false;
	
	System.out.println(verifyNumberHigher ? "A soma de A + B é Maior que C" : "A Soma é de A + B é menor que C" );
	
	
	
	}
}
