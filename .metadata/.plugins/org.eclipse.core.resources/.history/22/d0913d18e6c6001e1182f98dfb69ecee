package Condições;

import java.util.Scanner;

public class ifElse2 {

	
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner read = new Scanner(System.in);
			
		int numberIn;
		System.out.printf("Insira o numero negativo ou positivo : ");
		numberIn = read.nextInt();
		
		boolean positivoNegativo = (numberIn > 0 ? true : false);
		String parImpar = (numberIn % 2 == 0 ? "Numero é par" : "Numero não é par");
		
		// 					false 			verdade                         pula							
		String result = (positivoNegativo && parImpar == "Numero é par" ? "Numero é par e positivo" : positivoNegativo ?
				"O numero é positivo e impar" : parImpar != "Numero é par" ? "O numero é impar e negativo":" O numero é negativo e par");
		
	 // result = 
			//verdade          verdade
		if(positivoNegativo && parImpar == "Numero não é par") {
			System.out.printf("Numero é par e positivo");
			//Aqui vai ver se as duas condiçoes sao verdadeira
			// Primeira condição : positivoNegativo = true(verdade/positivo);
			//Segunda Condição : parIMpar = true(verdade/Par);
		//------------------------------------------------------------
			//pode ser visto de duas formas
				//(verdade / existe)
		} else (positivoNegativo) { 
			System.out.printf("Numero é impar e par");
			//Se for verdade, quer dizer que o numero é positivo, e atendeu a primeira condição
			//Se for False (mentira), quer dizer que a segunda condiçao foi atendida.
			//----------------------------------------------------------------
			
			//
		} else (parImpar){
			
			
		}
		
	}
		
	
		
		
		
		
		

		
		
		
		
		
	}

}
